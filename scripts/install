#!/bin/bash

# Retrieve arguments
domain=$1
path=$2
user=$3

# Check user parameter
sudo yunohost user list --json | grep -q "\"username\": \"$user\""
if [[ ! $? -eq 0 ]]; then
    echo "Wrong user"
    exit 1
fi



# Check domain/path availability
sudo yunohost app checkurl $domain$path -a nexus
if [[ ! $? -eq 0 ]]; then
    exit 1
fi


sudo yunohost app setting nexus admin_user -v $user

YNH_MAIL=$(sudo yunohost user info $user | grep "mail: " | sed s/'mail: '/''/g)

# Remove trailing "/" for next commands
path=${path%/}

# Install dependencies
sudo apt-get install -y openjdk-7-jre tomcat7

wget "http://download.sonatype.com/nexus/oss/nexus-2.10.0-02.war" -p /var/lib/tomcat7/webapps/nexus.war

# Copy files to the right place
sudo service tomcat7 stop
sudo chown -R tomcat7:tomcat7 /var/lib/tomcat7/webapps/




sed -i "s@PATHTOCHANGE@$path@g" ../conf/nginx.conf
sudo cp ../conf/nginx.conf /etc/nginx/conf.d/$domain.d/nexus.conf



sudo addgroup $user tomcat7
sudo addgroup tomcat7 $user


data_path=/home/yunohost.app/nexus
sudo mkdir -p $data_path
sudo chown -hR tomcat7:tomcat7 $data_path
sudo chmod 775 $data_path

# Monitor service
sudo service tomcat7 start
sudo yunohost service add tomcat7




# Reload Nginx and regenerate SSOwat conf

sudo service nginx reload

sudo yunohost app ssowatconf
